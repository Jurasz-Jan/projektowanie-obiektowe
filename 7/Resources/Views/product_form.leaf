#extend("base") {
    #export("title") { Dodaj produkt }

    #export("body") {
        <h1>Nowy produkt</h1>
        <form action="/products" method="POST">
            <label>Nazwa:</label>
            <input type="text" name="name" required />
            <br />
            <label>Cena:</label>
            <input type="number" step="0.01" name="price" required />
            <br />
            <button type="submit">Zapisz</button>
        </form>
    }
}
